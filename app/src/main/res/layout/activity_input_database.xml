<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDatabase"
    android:background="@drawable/bg_sign_up">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_basic_white"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:text="Nama Tanaman"
            android:textSize="20dp" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/db_tanaman"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_signin"
            android:inputType="text" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:text="image url"
            android:textSize="20dp" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/db_url"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_signin"
            android:inputType="textUri" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:text="pH bawah"
            android:textSize="20dp" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/db_ph_bwh"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_signin"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mregular"
            android:text="pH atas"
            android:textSize="20dp" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/db_ph_ats"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_signin"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mregular"
            android:text="EC bawah"
            android:textSize="20dp" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/db_ec_bwh"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_signin"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mregular"
            android:text="EC atas"
            android:textSize="20dp" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/db_ec_ats"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_signin"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <Button
        android:id="@+id/db_submit"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_basic_white"
        android:fontFamily="@font/mregular"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>